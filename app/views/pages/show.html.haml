= content_for :title, "p1r0n1m0: #{@page.title}"
%h1= @page.title
%p
  = form_tag(posts_path) do
    = text_area_tag(:body, "", :size => "100x6")
    = hidden_field_tag(:page_slug, @page.slug)
    = submit_tag "New Post!"
    %ul.posts
      - @page.posts.each do |post|
        %li
          %p.body(style="#{post.user.tip_css}")= post.body
          %p.initials= post.user.initials
